<h1 class="title">Lista de requests</h1>

<table class="table table-striped">
  <tr>
      <th>qtd_solicitada</th>
      <th colspan="3">Ações</th>
  </tr>

  <%= content_tag_for(:tr, @requests) do |request| %>
          <td><%= request.qtd_solicitada %></td>
        <td>
      <%= link_to 'Mostrar', request %>
      <%= link_to 'Editar', edit_request_path(request) %>
      <%= link_to 'Destruir', request, method: :delete, data: { confirm: 'Você tem certeza?' } %>
    </td>
  <% end %>
</table>

<hr />

<%= link_to 'Novo(a) Request', new_request_path, class: 'btn btn-success' %>
