<%= simple_form_for([@bid, @item]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :item, label: 'Item' %>
    <%= f.association :item_classification, label: 'Classificação', label_method: :nome %>
    <%= f.input :descricao, label: 'Descrição' %>
    <%= f.association :supplier, label: 'Fornecedor', label_method: :razao_social %>
    <%= f.input :validade, as: :date_picker %>
    <%= f.input :unidade %>
    <%= f.input :quantidade %>
    <%= f.input :valor_unitario, label: 'Valor Unitário ex: (2500,00)', placeholder: '1999,99' %>
    <%= f.input :tipo, collection: [['Consumo', 'Consumo'], ['Permanente', 'Permanente'], ['Serviço', 'Serviço']] %>
    <%= f.input :observacao, label: 'Observação' %>
    <%= f.input :ativo, input_html: {checked: true} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
