<h2 class="title">Editar Usuário</h2>
<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Atualmente esperando pela confirmação de: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Nova Senha" %> <i> (Deixe em branco se não deseja alterar)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'Confirmar Nova Senha' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Senha Atual" %> <i>(Precisamos de sua senha atual para confirmar as alterações.)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Atualizar", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <hr />
<% end %>

<div class="form-signin">
  <h4 class="title">Cancelar minha Conta</h4>
  <p><%= button_to "Cancelar minha Conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class: 'btn btn-danger' %></p>
</div>
