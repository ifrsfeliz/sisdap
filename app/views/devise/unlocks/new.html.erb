<h2 class="title">Reenviar Instruções de Desbloqueio</h2>
<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Resend unlock instructions", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
  
  <%= render "devise/shared/links" %>
<% end %>

