<h2 class="title">Esqueceu sua senha?</h2>
<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar instruções para resetar a senha", class: "btn btn-lg btn-primary btn-block" %>
  </div>
  
  <%= render "devise/shared/links" %>

<% end %>

