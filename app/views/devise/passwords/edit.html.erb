<h2 class="title">Mudar sua senha</h2>
<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "Nova Senha" %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar Nova Senha" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Alterar minha senha", class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <%= render "devise/shared/links" %>

<% end %>
