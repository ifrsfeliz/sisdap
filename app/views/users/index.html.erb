<h1 class="title">Lista de Usuários</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Funções</th>
      <th>Autorização do Admin</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.list_roles %></td>
        <td>
          <% if user.admin_authorization %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
          <% else %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
      </td>
        <% if can? :read, user %>
          <td><%= link_to 'Mostrar', user %></td>
        <% end %>
        <% if can? :update, user %>
          <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <% end %>
        <% if can? :delete, user %>
          <td><%= link_to 'Deletar', user, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
