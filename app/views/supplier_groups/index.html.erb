<h1 class="title">Grupos de Fornecedores</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @supplier_groups.each do |supplier_group| %>
      <tr>
        <td><%= supplier_group.nome %></td>
        <td><%= link_to 'Mostrar', supplier_group %></td>
        <td><%= link_to 'Editar', edit_supplier_group_path(supplier_group) %></td>
        <td><%= link_to 'Destruir', supplier_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Grupo', new_supplier_group_path, class: 'btn btn-primary' %>
